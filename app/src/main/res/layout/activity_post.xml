<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_focused"
    tools:context=".post">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/show_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:hint="post_title"
            android:paddingLeft="5dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
            android:textCursorDrawable="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/post_description"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:hint="description "
            android:paddingLeft="5dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
            android:textCursorDrawable="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/post_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:hint="price"
            android:paddingLeft="5dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
            android:textCursorDrawable="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/post_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:hint="city"
            android:paddingLeft="5dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
            android:textCursorDrawable="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/post_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:hint="phone "
            android:paddingLeft="5dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
            android:textCursorDrawable="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/post_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:hint="category"
            android:paddingLeft="5dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
            android:textCursorDrawable="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/post_guarant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:hint="guarante "
            android:paddingLeft="5dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
            android:textCursorDrawable="@android:color/background_dark"
            android:textSize="24sp" />

        <Button
            android:id="@+id/menue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:onClick="menu"
            android:text="menue" />

    </LinearLayout>

</ScrollView>